{
  "compilerOptions": {
    "noUnusedLocals": true,    
    "declaration": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es6", "dom" ],
    "typeRoots": [
      "./node_modules/@types"
      ],
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules/**/*"]
}
